{
  "name": "@jigra/create-app",
  "version": "0.1.4",
  "description": "Create a new Jigra project",
  "author": "Navify Team",
  "homepage": "https://jigrajs.web.app",
  "engines": {
    "node": ">=10.3.0"
  },
  "main": "./dist/index.js",
  "bin": {
    "create-jigra-app": "bin/create-jigra-app"
  },
  "scripts": {
    "pack-assets": "node ./scripts/pack-assets.mjs",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,js,mjs,ts}\"",
    "build": "npm run clean && npm run pack-assets && tsc",
    "clean": "rimraf ./dist",
    "watch": "tsc -w",
    "release": "np --no-tests",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "assets/app-template.tar.gz",
    "bin/",
    "dist/"
  ],
  "keywords": [
    "jigra",
    "universal app",
    "progressive web apps",
    "cross platform"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navify/create-jigra-app.git"
  },
  "bugs": {
    "url": "https://github.com/navify/create-jigra-app/issues"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": "@navify/prettier-config",
  "eslintConfig": {
    "extends": "@navify/eslint-config/recommended"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "kleur": "^4.0.3",
    "mustache": "^4.0.1",
    "prompts": "^2.3.2",
    "tar": "^6.1.11",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@navify/eslint-config": "^0.3.0",
    "@navify/prettier-config": "^2.0.0",
    "@types/debug": "^4.1.5",
    "@types/mustache": "^4.0.1",
    "@types/prompts": "^2.0.8",
    "@types/tar": "^4.0.3",
    "eslint": "^7.9.0",
    "husky": "^4.2.5",
    "np": "^6.5.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "~3.8.3"
  }
}
